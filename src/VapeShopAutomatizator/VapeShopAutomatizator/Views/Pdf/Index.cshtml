@model IEnumerable<VapeShopAutomatizator.Models.PdfModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PdfName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PdfFile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PdfName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PdfFile)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PdfKey">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PdfKey">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PdfKey">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
